    <script>
      document.addEventListener("DOMContentLoaded", function () {
        // Obtener referencias a elementos del DOM
        const modal = document.getElementById("image-modal");
        const modalImg = document.getElementById("modal-image");
        const closeModal = document.getElementById("close-modal");

        // Obtener todas las imágenes de la galería
        const galleryImages = document.querySelectorAll(
          ".gallery-wrapper > div > img"
        );

        // Función para abrir el modal con una imagen
        function openModal(imageSrc) {
          modal.style.display = "block";
          modalImg.src = imageSrc;
        }

        // Función para cerrar el modal
        function closeModalHandler() {
          modal.style.display = "none";
        }

        // Agregar un controlador de eventos a cada imagen de la galería
        galleryImages.forEach((img) => {
          img.addEventListener("click", () => {
            openModal(img.src); // Abre el modal con la imagen clicada
          });
        });

        // Agregar un controlador de eventos para el botón de cerrar modal
        closeModal.addEventListener("click", closeModalHandler);
      });
    </script>
