<header class="w-full fixed z-50">
  <div class="antialiased bg-gray-100 dark-mode:bg-gray-900">
    <div
      class="text-gray-700 bg-white dark-mode:text-gray-200 dark-mode:bg-gray-800"
    >
      <div
        class="flex flex-col max-w-screen-xl mx-auto md:items-center md:justify-between md:flex-row md:px-6"
      >
        <div class="flex flex-row items-center justify-between p-4">
          <a
            href="/"
            class="lg:text-xl md:text-lg font-semibold tracking-widest text-gray-900 uppercase rounded-lg focus:outline-none focus:shadow-outline"
            >Alojamiento y pesca Doña Irma</a
          >
          <button
            id="navButton"
            class="rounded-lg md:hidden focus:outline-none focus:shadow-outline"
          >
            <!-- SVG Icon -->
            <svg fill="currentColor" viewBox="0 0 20 20" class="w-6 h-6">
              <!-- Path 1 (para el estado cerrado) -->
              <path
                id="closedIconPath"
                fill-rule="evenodd"
                d="M3 5a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zM3 10a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zM9 15a1 1 0 011-1h6a1 1 0 110 2h-6a1 1 0 01-1-1z"
                clip-rule="evenodd"></path>
              <!-- Path 2 (para el estado abierto) -->
              <path
                id="openIconPath"
                fill-rule="evenodd"
                d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z"
                clip-rule="evenodd"></path>
            </svg>
          </button>
        </div>
        <nav
          id="NavMenu"
          class="flex flex-col hidden pb-4 md:pb-0 md:flex md:justify-end md:flex-row"
        >
          <a
            class="nav-link text-center px-4 py-2 mt-2 text-sm font-semibold bg-transparent rounded-lg dark-mode:bg-transparent dark-mode:hover:bg-gray-600 dark-mode:focus:bg-gray-600 dark-mode:focus:text-white dark-mode:hover:text-white dark-mode:text-gray-200 md:mt-0 md:ml-4 hover:text-gray-900 focus:text-gray-900 hover:bg-gray-200 focus:bg-gray-200 focus:outline-none focus:shadow-outline"
            href="#services">Servicios</a
          >

          <a
            class="nav-link text-center px-4 py-2 mt-2 text-sm font-semibold bg-transparent rounded-lg dark-mode:bg-transparent dark-mode:hover:bg-gray-600 dark-mode:focus:bg-gray-600 dark-mode:focus:text-white dark-mode:hover:text-white dark-mode:text-gray-200 md:mt-0 md:ml-4 hover:text-gray-900 focus:text-gray-900 hover:bg-gray-200 focus:bg-gray-200 focus:outline-none focus:shadow-outline"
            href="#gallery">Galeria</a
          >
          <a
            class="nav-link text-center px-4 py-2 mt-2 text-sm font-semibold bg-transparent rounded-lg dark-mode:bg-transparent dark-mode:hover:bg-gray-600 dark-mode:focus:bg-gray-600 dark-mode:focus:text-white dark-mode:hover:text-white dark-mode:text-gray-200 md:mt-0 md:ml-4 hover:text-gray-900 focus:text-gray-900 hover:bg-gray-200 focus:bg-gray-200 focus:outline-none focus:shadow-outline"
            href="#contact">Contacto</a
          >
        </nav>
      </div>
    </div>
  </div>
  <script>
    // Seleccionar elementos del DOM
    const handleButton = document.getElementById("navButton");
    const closedIcon = document.getElementById("closedIconPath");
    const openIcon = document.getElementById("openIconPath");
    const navMenu = document.getElementById("NavMenu");
    const navLinks = document.querySelectorAll(".nav-link");
    let isOpen = false;
    
    // Configuración inicial
    closedIcon.style.display = "block";
    openIcon.style.display = "none";

    // Función para alternar la visibilidad del menú de navegación
    function toggleNavigation() {
      isOpen = !isOpen;
      openIcon.style.display = isOpen ? "block" : "none";
      closedIcon.style.display = isOpen ? "none" : "block";
      navMenu.classList.toggle("hidden", !isOpen);
    }

    // Agregar un evento de clic a los enlaces de navegación para ocultar el menú
    navLinks.forEach((link) => {
      link.addEventListener("click", toggleNavigation);
    });

    // Agregar un evento de clic al botón de navegación para alternar el menú
    handleButton.addEventListener("click", toggleNavigation);
  </script>
</header>
